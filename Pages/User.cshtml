@page
@model UserModel
@{
    ViewData["Title"] = "Members";
}

<style>
    
    body {
        background-color: #f5f5f5;
    }
    
    h3 {
        color: #333;
    }
    
    .card {
        background-color: #fff;
        border: 1px solid #ccc;
        border-radius: 5px;
    }
    
    .card-title {
        color: #333;
    }
    
    .card-text {
        color: #777;
    }
    
    ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }
    
    li {
        color: #555;
    }
</style>

<div class="container">
    <h3>The Book Nook</h3>
    <hr />
    <div class="row">
        <div class="col-4">
            <form method="post">
                <div class="form-group">
                    <label asp-for="User.UserId" class="form-label">Select Member</label>
                    <select asp-for="User.UserId" asp-items="Model.UserDropDown" class="form-select">
                        <option value="">-- Select Member --</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="col-md-8">
       

    @if (Model.User != null)
    {
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Selected Member:</h5>
                        <p class="card-text">
                            <strong>Name:</strong> @Model.User.FirstName @Model.User.LastName <br />
                            <strong>Email:</strong> @Model.User.Email <br />
                            <strong>Biography:</strong> @Model.User.Biography <br />
                            <strong>Books:</strong>
                            <ul>
                                @if (Model.User.UserBooks != null && Model.User.UserBooks.Count > 0)
                                {
                                    foreach (var book in Model.User.UserBooks)
                                    {
                                        <li>@book.Book.Title - @book.Book.Author</li>
                                    }
                                }
                                else
                                {
                                    <li>No Books to Display</li>
                                }
                            </ul>
                        </p>
                    </div>
                </div>
            </div>
    }
   
 <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Create New User:</h5>
                    <form method="post" asp-page-handler="CreateUser">

    <div class="form-group">
        <label asp-for="User.FirstName" class="form-label">First Name</label>
        <input asp-for="User.FirstName" class="form-control" />
        <span asp-validation-for="User.FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="User.LastName" class="form-label">Last Name</label>
        <input asp-for="User.LastName" class="form-control" />
        <span asp-validation-for="User.LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="User.Email" class="form-label">Email:</label>
        <input asp-for="User.Email" class="form-control" />
        <span asp-validation-for="User.Email" class="form-control" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="User.Biography" class="form-label">Biography:</label>
        <textarea asp-for="User.Biography" class="form-control"></textarea>
        <span asp-validation-for="User.Biography" class="form-control" class="text-danger"></span>
    </div>

    <div class="form-group">
         <input type="submit" value="Create" class="btn btn-primary" />
   </div>
</form>
</div>
</div>
</div>
</div>
</div>
</div>
</div>
</div>